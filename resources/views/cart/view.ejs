<!-- Main Container -->
<section class="main-container col1-layout">
  <div class="main container">
    <div class="col-main">
      <div class="cart">
        <div class="table-responsive">
          <form method="post" action="#">
            <fieldset>
              <table class="data-table cart-table" id="shopping-cart-table">
                <thead>
                  <tr class="first last">
                    <th rowspan="1">&nbsp;</th>
                    <th rowspan="1"><span class="nobr">Product Name</span></th>
                    <th rowspan="1" class="hidden-phone"></th>

                    <th colspan="1" class="a-center">
                      <span class="nobr">Unit Price</span>
                    </th>
                    <th class="a-center" rowspan="1">Qty</th>
                    <th colspan="1" class="a-center">Subtotal</th>
                    <th class="a-center" rowspan="1">&nbsp;</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr class="first last">
                    <td class="a-right last" colspan="50">
                      <a href="/">
                        <button
                          onclick=""
                          class="button btn-continue"
                          title="Continue Shopping"
                          type="button"
                        >
                          <span>Continue Shopping</span>
                        </button></a
                      >
                    </td>
                  </tr>
                </tfoot>
                <tbody>
                  <% if(session.cart) { %> <% for(let product of
                  Object.values(session.cart.items)) { %>
                  <tr class="first odd" id="product_<%=product.item._id%>">
                    <td class="image">
                      <a
                        class="product-image"
                        title=""
                        href="/product/main/<%=product.item._id %>"
                        ><img
                          width="75"
                          height="75"
                          alt="<%= product.item.name%>"
                          src="/<%= product.item.image%>"
                      /></a>
                    </td>
                    <td>
                      <h2 class="product-name">
                        <a href="/product/main/<%=product.item._id %>"
                          ><%= product.item.name%></a
                        >
                      </h2>
                    </td>
                    <td class="a-center hidden-table"></td>

                    <td class="a-center hidden-table">
                      <span class="cart-price">
                        <span class="price">₹<%= product.item.price%></span>
                      </span>
                    </td>
                    <td class="a-center movewishlist">
                      <span class="qty">
                        <span class="qty"><%=product.qty%></span>
                      </span>
                    </td>
                    <td class="a-center movewishlist">
                      <span class="cart-price">
                        <span class="price"
                          >₹<%= product.qty * product.item.price%></span
                        >
                      </span>
                    </td>
                    <td class="a-center last">
                      <a
                        class="button remove-item remove-cart-item"
                        title="Remove item"
                        href="javascript:void(0)"
                        data-item="<%=product.item._id%>"
                        ><span><span>Remove item</span></span></a
                      >
                    </td>
                  </tr>
                  <% } }else{ %>
                  <td class="image"></td>
                  <td></td>
                  <td class="a-center hidden-table"></td>

                  <td class="a-center hidden-table">
                    <span class="cart-price">
                      <span>No Item in the cart</span>
                    </span>
                  </td>
                  <td class="a-center movewishlist"></td>
                  <td class="a-center movewishlist"></td>
                  <td class="a-center last"></td>
                  <%} %>
                </tbody>
              </table>
            </fieldset>
          </form>
        </div>
        <!-- BEGIN CART COLLATERALS -->
        <div class="cart-collaterals row">
          <div class="col-sm-4"></div>
          <div class="col-sm-4"></div>
          <div class="col-sm-4">
            <div class="totals">
              <h3>Shopping Cart Total</h3>
              <div class="inner">
                <table
                  class="table shopping-cart-table-total"
                  id="shopping-cart-totals-table"
                >
                  <colgroup>
                    <col />
                    <col width="1" />
                  </colgroup>
                  <tfoot>
                    <tr>
                      <td colspan="1" class="a-left">
                        <strong>Grand Total</strong>
                      </td>
                      <td class="a-right">
                        <strong
                          ><span class="price"
                            >₹<%= session.cart ? session.cart.totalPrice :
                            ""%></span
                          ></strong
                        >
                      </td>
                    </tr>
                  </tfoot>
                  <tbody>
                    <tr>
                      <td colspan="1" class="a-left">Subtotal</td>
                      <td class="a-right">
                        <span class="price"
                          >₹<%= session.cart ? session.cart.totalPrice:
                          ''%></span
                        >
                      </td>
                    </tr>
                  </tbody>
                </table>
                <ul class="checkout">
                  <% if(session.cart) { %> <%if(user) { %>
                  <li id="checkout_cart_button">
                    <a href="/cart/checkout">
                      <button
                        class="button btn-proceed-checkout"
                        title="Proceed to Checkout"
                        type="button"
                      >
                        <span>Proceed to Checkout</span>
                      </button></a
                    >
                  </li>
                  <% }else{ %>
                  <li>
                    <a href="/user/login">
                      <button
                        class="button btn-proceed-checkout"
                        title="Login"
                        type="button"
                      >
                        <span>Login to Proceed</span>
                      </button></a
                    >
                  </li>
                  <% } %>

                  <br />
                  <% }%>
                </ul>
              </div>
            </div>
            <!--inner-->
          </div>
        </div>

        <!--cart-collaterals-->
      </div>
    </div>
  </div>
</section>
